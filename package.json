{
    "version": "0.0.2",
    "name": "@mkellsy/homebridge-lutron-ra3",
    "displayName": "Homebridge Lutron Radio RA3",
    "description": "This is a plugin that exposes Lutron Radio RA3 devices to Homebridge.",
    "author": "Michael Kellsy",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/mkellsy/homebridge-lutron-ra3"
    },
    "homepage": "https://github.com/mkellsy/homebridge-lutron-ra3",
    "main": "lib/index.js",
    "keywords": [
        "homebridge-plugin"
    ],
    "files": [
        "/lib",
        "/bin"
    ],
    "bin": {
        "lutron": "bin/lutron"
    },
    "scripts": {
        "build": "rm -fR ./lib && tsc --project tsconfig.json",
        "start": "npm run build && ./bin/lutron -d start",
        "watch": "npm run build && npm link && nodemon",
        "pair": "npm run build && ./bin/lutron -d pair",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "@mkellsy/hap-device": "^1.0.3",
        "@mkellsy/leap-client": "^1.0.6",
        "colors": "^1.4.0",
        "commander": "^10.0.1",
        "js-logger": "^1.6.1"
    },
    "peerDependencies": {
        "homebridge": "^1.8.1"
    },
    "devDependencies": {
        "@types/debug": "^4.1.12",
        "@types/node": "^20.11.0",
        "homebridge": "^1.8.1",
        "nodemon": "^3.1.0",
        "typescript": "^5.3.3"
    }
}

{
    "version": "1.2.1",
    "name": "@mkellsy/homebridge-lutron",
    "displayName": "Homebridge Lutron",
    "description": "This is a plugin that exposes Lutron LEAP devices to Homebridge.",
    "author": "Michael Kellsy",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/mkellsy/homebridge-lutron"
    },
    "homepage": "https://github.com/mkellsy/homebridge-lutron",
    "main": "lib/index.js",
    "keywords": [
        "homebridge-plugin",
        "lutron-leap",
        "lutron",
        "caseta",
        "ra3",
        "radiora3",
        "lutron-ra3",
        "lutron-radiora3"
    ],
    "files": [
        "/lib",
        "/bin"
    ],
    "bin": {
        "lutron": "bin/lutron"
    },
    "scripts": {
        "build": "./build",
        "start": "npm run build && ./bin/lutron -d start",
        "watch": "npm run build && npm link && nodemon",
        "pair": "npm run build && ./bin/lutron -d pair",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "homebridge": "^1.8.1"
    },
    "devDependencies": {
        "@mkellsy/hap-device": "^1.1.8",
        "@mkellsy/leap-client": "^1.1.9",
        "@types/debug": "^4.1.12",
        "@types/node": "^20.11.0",
        "colors": "^1.4.0",
        "commander": "^10.0.1",
        "esbuild": "^0.20.2",
        "js-logger": "^1.6.1",
        "nodemon": "^3.1.0",
        "typescript": "^5.3.3"
    }
}

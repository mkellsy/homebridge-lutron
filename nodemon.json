{
    "watch": ["src"],
    "ext": "ts",
    "ignore": [],
    "exec": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --packages=external --outfile=lib/index.js && homebridge --debug --user-storage-path ./storage",
    "signal": "SIGTERM",
    "env": {
        "NODE_OPTIONS": "--trace-warnings"
    }
}
